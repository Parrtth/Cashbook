<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/txt_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="PDF"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textSize="25sp"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/txt_title1"
        android:layout_width="95dp"
        android:layout_height="35dp"
        android:text="Start Date"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/txt_start_date"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:background="@drawable/txt_date_back"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/calendar_d"
       android:paddingTop="4dp"
        android:drawablePadding="10dp"
        android:paddingStart="5dp"
        android:text="05/06/2023"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintEnd_toEndOf="parent"
  android:layout_marginEnd="10dp"
        />

    <TextView
        android:id="@+id/txt_title2"
        android:layout_width="95dp"
        android:layout_height="35dp"
        android:text="End Date"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt_title1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/txt_end_date"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:background="@drawable/txt_date_back"
        android:layout_marginTop="13dp"
        android:drawableLeft="@drawable/calendar_d"
        android:paddingTop="4dp"
        android:drawablePadding="10dp"
        android:paddingStart="5dp"
        android:text="05/06/2023"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:layout_constraintTop_toBottomOf="@id/txt_start_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_save"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title2"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_save"
        android:text="Ok"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_end_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>